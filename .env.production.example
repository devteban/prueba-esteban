# Production Environment Configuration for Mini-Trello
# Copy this to .env and modify values accordingly

APP_NAME="Mini Trello"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# SQLite Database Configuration (Production)
DB_CONNECTION=sqlite
DB_HOST=
DB_PORT=
DB_DATABASE=/var/www/html/database/database.sqlite
DB_USERNAME=
DB_PASSWORD=

# Cache Configuration (Simple file cache for SQLite setup)
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (configure for production)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Additional Production Settings
BROADCAST_DRIVER=log

# Security (important for production)
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
